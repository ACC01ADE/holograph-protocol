{
  "name": "Holograph-Bridge-Protocol",
  "version": "1.0.1",
  "description": "The Holograph Bridge Protocol - solidity smart contracts",
  "license": "MIT",
  "author": "cxip-labs",
  "main": "index.js",
  "scripts": {
    "init": "cp sample.env .env ; cp sample.mnemonic .mnemonic ; mkdir data",
    "abi": "rm -fr ./abi ; mkdir ./abi ; node ./scripts/abi.js",
    "build": "rm -fr ./contracts ; mkdir ./contracts ; node ./scripts/build.js",
    "build-compile": "rm -fr ./build ; mkdir ./build ; npm run-script build ; npm run-script compile",
    "cleanup": "rm -fr ./build ; mkdir ./build ; rm -fr ./data ; mkdir ./data",
    "compile": "node ./scripts/compile.js",
    "ganache": "source .env ; rm -fr ./db ; mkdir ./db ; rm ./keys.json ; ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db --acctKeys=./keys.json",
    "ganache2": "source .env ; rm -fr ./db2 ; mkdir ./db2 ; rm ./keys2.json ; ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=9545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db2 --acctKeys=./keys2.json",
    "ganache-x2": "source .env ; rm -fr ./db ; rm -fr ./db2 ; mkdir ./db ; mkdir ./db2 ; rm ./keys.json ; rm ./keys2.json ; ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db --acctKeys=./keys.json & ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=9545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db2 --acctKeys=./keys2.json",
    "test": "sh _test.sh",
    "test-bridge": "sh _test_bridge.sh"
  },
  "dependencies": {
    "path": "^0.12.7",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.7.0"
  },
  "devDependencies": {
    "ganache-cli": "^6.12.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/data-urls": "^2.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "data-urls": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.6.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.1.0",
    "typechain": "^7.0.0",
    "typescript": "^4.3.5"
  }
}
