{
  "name": "BRIDGE",
  "version": "0.0.1",
  "description": "CXIP NFT BRIDGE",
  "license": "UNLICENSED",
  "author": "vitto.io",
  "main": "index.js",
  "scripts": {
    "abi": "rm -fr ./abi ; mkdir ./abi ; node ./scripts/abi.js",
    "build": "rm -fr ./contracts ; mkdir ./contracts ; node ./scripts/build.js",
    "build-compile": "rm -fr ./build ; mkdir ./build ; npm run-script build ; npm run-script compile",
    "cleanup": "rm -fr ./build ; mkdir ./build ; rm -fr ./data ; mkdir ./data",
    "compile": "node ./scripts/compile.js",
    "dev": "rm -fr ./contracts ; mkdir contracts ; node scripts/build.js ; sh _build.sh",
    "ganache": "rm -fr ./db ; mkdir ./db ; rm ./keys.json ; ganache-cli --accounts=10 --defaultBalanceEther=100 --deterministic --mnemonic=\"$(cat ./.mnemonic)\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./db --acctKeys=./keys.json",
    "pipeline": "npm run-script ganache & sh _pipeline.sh"
  },
  "dependencies": {
    "path": "^0.12.7",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.7.0"
  },
  "devDependencies": {
    "dotenv": "^10.0.0"
  },
  "engines": {
    "node": "12.16.3",
    "yarn": "1.22.5"
  }
}
