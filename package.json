{
  "name": "Holograph-Bridge-Protocol",
  "version": "1.0.1",
  "description": "The Holograph Bridge Protocol - solidity smart contracts",
  "license": "UNLICENSED",
  "author": "cxip-labs",
  "main": "index.js",
  "files": [
    "typechain",
    "contracts",
    "deployments"
  ],
  "scripts": {
    "init": "cp sample.env .env",
    "abi": "hardhat abi",
    "build": "hardhat inject-holograph-address",
    "clean-compile": "yarn run clean ; yarn run compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "ganache": "source .env ; rm -fr ./ganache/db ; mkdir -p ./ganache/db ; rm ./ganache/keys.json ; ganache-cli --accounts=11 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./ganache/db --acctKeys=./ganache/keys.json",
    "ganache2": "source .env ; rm -fr ./ganache/db2 ; mkdir -p ./ganache/db2 ; rm ./ganache/keys2.json ; ganache-cli --accounts=11 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=9545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./ganache/db2 --acctKeys=./ganache/keys2.json",
    "ganache-x2": "source .env ; rm -fr ./ganache/db ; rm -fr ./ganache/db2 ; mkdir -p ./ganache/db ; mkdir -p ./ganache/db2 ; rm ./ganache/keys.json ; rm ./ganache/keys2.json ; ganache-cli --accounts=11 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=8545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./ganache/db --acctKeys=./ganache/keys.json & ganache-cli --accounts=11 --defaultBalanceEther=100 --deterministic --mnemonic=\"$MNEMONIC\" --port=9545 --hostname=0.0.0.0 --gasPrice=0 --gasLimit=10000000 --networkId=5777 --db=./ganache/db2 --acctKeys=./ganache/keys2.json",
    "test": "hardhat test",
    "typechain": "hardhat typechain",
    "verify": "hardhat verify",
    "prettier:check": "prettier --loglevel error --ignore-path .gitignore --list-different .",
    "prettier:fix": "prettier --loglevel error --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "hardhat-deploy-holographed": "https://github.com/cxip-labs/hardhat-deploy-holographed.git",
    "hardhat-holograph-contract-builder": "https://github.com/cxip-labs/hardhat-holograph-contract-builder.git",
    "path": "^0.12.7",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.7.0",
    "zksync-web3": "^0.4.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/data-urls": "^2.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "data-urls": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.6.3",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.1.0",
    "typechain": "^7.0.0",
    "typescript": "^4.3.5"
  }
}
